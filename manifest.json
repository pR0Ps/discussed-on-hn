{
  "manifest_version": 2,
  "name": "Discussed on HN",
  "version": "0.2",

  "description": "Check if current page was discussed on Hacker News.",
  "homepage_url": "https://github.com/vanyakosmos/discussed-on-hn",

  "icons": {
    "128": "icons/icon-128.png"
  },

  "permissions": [
    "tabs",
    "storage"
  ],

  "browser_action": {
    "default_icon": "icons/mid-128.png",
    "default_title": "Click to check."
  },

  "background": {
    "scripts": ["background.js"]
  },

  "options_page": "options.html",

  // firefox stuff
  "options_ui": {
    "page": "options.html"
  }
}
