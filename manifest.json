{
  "manifest_version": 2,
  "name": "Discussed on HN",
  "version": "0.1",

  "description": "Check if current page was discussed on Hacker News.",
  "homepage_url": "https://github.com/vanyakosmos/discussed-on-hn",

  "icons": {
    "128": "icons/icon-128.png"
  },

  "permissions": [
    "tabs",
    "storage"
  ],

  "browser_action": {
    "default_icon": "icons/mid-128.png",
    "default_title": "Bookmark it!"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "options_page": "options.html"
}
